@model GestaoArtigos.Models.tb_necessidades
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.codigo)

        <div class="form-group">
            <label class="control-label col-sm-2"><b>ID do Artigo</b></label>
            <div class="control-label col-sm-2">
                @Html.DisplayFor(model => model.codigo_artigo)
                @Html.HiddenFor(model => model.codigo_artigo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2"><b>Stock Atual</b></label>
            <div class="control-label col-sm-2">
                @Html.EditorFor(model => model.quantidade_atual, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.quantidade_atual, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2"><b>Estado</b></label>
            <div class="control-label col-sm-2">
                @Html.DropDownListFor(model => model.estado, new SelectList(Enum.GetValues(typeof(Estado))), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m => m.data_criado)


        <div class="form-group">
            <label class="control-label col-sm-2"><b>Nº de utilizador</b></label>
            <div class="control-label col-sm-2">
                @Html.EditorFor(model => model.codigo_utilizador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codigo_utilizador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-warning" /> |
                <a class="btn btn-primary" href="/Necessidades/">Voltar à lista</a>
            </div>
        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
