@model GestaoArtigos.Models.NebluViewModel
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />

@{
    ViewBag.Title = "Create";
    if (Session["id_utilizador"] == null)
    {
        Response.Redirect("Login");
    }
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-sm-2">ID do Artigo</label>
            <div class="col-md-10">

                <button type="button" class="btn btn-primary glyphicon glyphicon-search" data-toggle="modal" data-target="#classModal">
                </button>

                <span class="id-label">
                    @Html.DisplayFor(model => model.necessidadesModel.id_artigo, new { @class = "id-label" })
                </span>
                
                <div id="classModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="classInfo" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                    ×
                                </button>
                                <h4 class="modal-title" id="classModalLabel">
                                </h4>
                            </div>
                            <div class="modal-body">

                                <table id="example" class="display" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                ID
                                            </th>
                                            <th>
                                                Referência
                                            </th>
                                            <th>
                                                Descrição
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.artigosModel)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.id_artigo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.referencia)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.descricao)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-danger">
                    @ViewBag.ErrorMessage
                </div>
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Stock Atual</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.necessidadesModel.quantidade_atual, new { htmlAttributes = new { @class = "form-control", @maxlength = "6" } })
                @Html.ValidationMessageFor(model => model.necessidadesModel.quantidade_atual, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Estado</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.necessidadesModel.estado, new SelectList(Enum.GetValues(typeof(Estado))), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.necessidadesModel.estado, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2">Nº de utilizador</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.necessidadesModel.id_utilizador, new { htmlAttributes = new { @class = "form-control", @maxlength = "8" } })
                @Html.ValidationMessageFor(model => model.necessidadesModel.id_utilizador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar" class="btn btn-warning" onclick="this.disabled=true;this.form.submit();" /> |
                <a class="btn btn-primary" href="/Necessidades">Voltar à lista</a>
            </div>
        </div>
    </div>

}

<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/Scripts/dataTables.bootstrap4.min.js" type="text/javascript"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $('#classModal').modal('show')
</script>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

<script>
    $(document).ready(function () {
        var table = $('#example').DataTable();

        $('#example tbody').on('dblclick', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            }
            else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                $('.id-label').text($(this).closest('tr').find('td:first').text());
                $('#classModal').modal('hide');
            }
        });
    });
</script>