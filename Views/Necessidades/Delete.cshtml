@model GestaoArtigos.Models.tb_necessidades
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Delete";
    if (Session["id_utilizador"] == null)
    {
        Response.Redirect("Login");
    }
}

<p>
    <h3>Tem a certeza que deseja eliminar o pedido ?</h3>
</p>

<br />

<div class="form-horizontal">

    <div class="form-group">
        <label class="control-label col-sm-2"><b>ID do Artigo</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.id_artigo)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2"><b>Quantidade pedida</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.quantidade_pedida)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2"><b>Estado</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.estado)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2"><b>Data de criação</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.data_criado)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2"><b>Última Alteração</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.data_alterado)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2"><b>Nº do utilizador</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.id_utilizador)
        </div>
    </div>

    <div class="form-group">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Eliminar" class="btn btn-warning" onclick="this.disabled=true;this.form.submit();" /> |
                <a class="btn btn-primary" href="/Necessidades">Voltar à lista</a>
            </div>
        }

    </div>
</div>
