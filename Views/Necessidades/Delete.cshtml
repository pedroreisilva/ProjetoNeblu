@model GestaoArtigos.Models.tb_necessidades
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Delete";
}

<h4>Tem a certeza que deseja eliminar o pedido ?</h4>

<div class="form-horizontal">

    <div class="form-group">
        <label class="control-label col-sm-2"><b>ID do Artigo</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.codigo_artigo)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2"><b>Quantidade Atual</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.quantidade_atual)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2"><b>Estado</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.estado)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2"><b>Data de criação</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.data_criado)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2"><b>Última Alteração</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.data_alterado)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2"><b>Nº do utilizador</b></label>
        <div class="control-label col-sm-2">
            @Html.DisplayFor(model => model.codigo_utilizador)
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-warning" /> |
            <a class="btn btn-primary" href="/Necessidades/Index">Voltar à lista</a>
        </div>
    }
</div>
