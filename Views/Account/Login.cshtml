@using GestaoArtigos.Models
@model GestaoArtigos.Models.tb_utilizadores
@{
    Layout = "";
}
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/Content/login.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <img class="wave" src="~/Content/img/wave.png">
    <div class="container">
            <div class="login-content">
                <img src="~/Content/img/logo_only.png">
                <form action="/Necessidades">
                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="div">
                            @Html.EditorFor(model => model.utilizador, new { htmlAttributes = new { placeholder = "Username" } })
                            @Html.ValidationMessageFor(model => model.utilizador, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="input-div pass">
                        <div class="i">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div class="div">
                            @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Password" })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <a href=/Account/ForgotPassword>Esqueceu-se da palava passe ?</a>
                    <input type="submit" class="btn" value="Login">
                </form>
            </div>
    </div>

<script type="text/javascript" src="~/Scripts/main.js"></script>
</body>
</html>