@model List<GestaoArtigos.Models.tb_artigos>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Index";
}


<p>
    <a class="btn btn-success" href="/Artigo/Create">Adicionar Novo</a>
</p>

<br />

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Referência
            </th>
            <th>
                Descrição
            </th>
            <th>
                Data de criação
            <th>
                Última Alteração
            </th>
            <th>
                Nº do utilizador
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.referencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data_criado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data_alterado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.codigo_utilizador)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.codigo }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.codigo }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.codigo }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<br />

<script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js" type="text/javascript"></script>

<script>
    $(document).ready(function() {
        $('#example').DataTable();
    } );
</script>
