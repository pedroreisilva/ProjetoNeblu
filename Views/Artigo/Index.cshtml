@model List<GestaoArtigos.Models.tb_artigos>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Index";
    if (Session["id_utilizador"] == null)
    {
        Response.Redirect("Login");
    }
}


<p>
    <a class="btn btn-success" href="/Artigo/Create">Adicionar Novo</a>
</p>

<br />

<table id="example" class="table table-striped table-bordered" style="width:100%" >
    <thead>
        <tr>
            <th>
                Referência
            </th>
            <th>
                Descrição
            </th>
            <th>
                Stock atual
            </th>
            <th>
                Data de criação
            </th>
            <th>
                Nº do utilizador
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody >
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.referencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantidade_atual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data_criado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.id_utilizador)
                </td>
                <td style="text-align: center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_artigo }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.id_artigo }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id_artigo }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<br />

<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/Scripts/dataTables.bootstrap4.min.js" type="text/javascript"></script>

<script>
    $(document).ready(function() {
        $('#example').DataTable();
    } );
</script>
